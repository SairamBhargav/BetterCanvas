{
  "manifest_version": 3,
  "name": "Canvas Helper",
  "version": "1.0",
  "description": "Extension to get all information from canvas in one place.",
  "options_page": "settings/settings.html",
  "action": {
    "default_icon": {
      "16": "logo16.png",
      "48": "logo48.png",
      "128": "logo128.png"
    },
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/services/CanvasAPIService.js",
        "scripts/services/StorageService.js",
        "scripts/services/StateManager.js",
        "scripts/components/UrgentWidget.js",
        "scripts/components/TimelineView.js",
        "scripts/components/OverlayContainer.js",
        "scripts/content.js"
      ],
      "matches": [
        "https://*/*"
      ],
      "run_at": "document_end"
    }
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "styles/material-design.css"
      ],
      "matches": [
        "https://*/*"
      ]
    }
  ]
}